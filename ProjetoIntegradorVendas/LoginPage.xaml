<Page x:Class="ProjetoIntegradorVendas.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoIntegradorVendas"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="LoginPage">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#DEDEDE"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Height" Value="38"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Height" Value="38"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
        </Style>
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="DarkOrange"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#2B2D42">

        <Border Width="350" 
                Padding="30" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Background="#FF1E1E1E" 
                CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Login"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Usuário" Margin="0,0,0,5"/>
                <TextBox x:Name="txUsuario" Margin="0,0,0,12"/>

                <TextBlock Text="Senha" Margin="0,0,0,5" />
                <PasswordBox x:Name="txSenha" Margin="0,0,0,15"/>

                <TextBlock Text="Entrar como" Margin="0,0,0,5"/>
                <ComboBox x:Name="comboTipoLogin" SelectedIndex="0" Margin="0,0,0,20">
                    <ComboBoxItem>Cliente</ComboBoxItem>
                    <ComboBoxItem>Vendedor</ComboBoxItem>
                </ComboBox>

                <Button x:Name="btLogin" 
                        Content="Entrar"
                        Click="irParaCatalogo_Click"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,10"
                        Style="{StaticResource LoginButtonStyle}"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Hyperlink Foreground="CornflowerBlue">
                        Esqueceu sua senha?
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>

        <ui:SnackbarPresenter x:Name="RootSnackbarPresenter" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" />

    </Grid>
</Page>