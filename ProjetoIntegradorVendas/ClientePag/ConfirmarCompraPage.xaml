<Page x:Class="ProjetoIntegradorVendas.ClientePag.ConfirmarCompraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoIntegradorVendas.ClientePag" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1000"
      Title="ConfirmarCompraPage">

    <Grid Background="#2B2D42" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:NavigationView x:Name="NavigationViewControl"
                           UseLayoutRounding="False"
                           PaneDisplayMode="Top"
                           Grid.Row="0">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home" Click="NavigationView_OnItemInvoked">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="{x:Static ui:SymbolRegular.Home24}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Carrinho" Click="NavigationView_OnItemInvoked">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="{x:Static ui:SymbolRegular.Cart24}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Configuração" Click="NavigationView_OnItemInvoked">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="{x:Static ui:SymbolRegular.Settings24}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem x:Name="Logout" Content="Logout" Click="NavigationView_OnItemInvoked">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="{x:Static ui:SymbolRegular.SignOut20}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <Grid Grid.Row="1" Background="{DynamicResource ApplicationBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20,20,20,20">
                    <TextBlock Text="Finalizar Compra" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" />

                    <ui:CardControl Margin="0,0,0,20" Padding="15">
                        <StackPanel Width="545">
                            <TextBlock Text="Endereço de Entrega" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <Border BorderThickness="0,1,0,0" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" Margin="0,0,0,10" />
                            <TextBlock Text="{Binding ClienteLogado.ClienteNome}" Margin="0,0,0,5" />
                            <TextBlock Text="{Binding ClienteLogado.ClienteCep}" Margin="0,0,0,5" />
                            <TextBlock Text="{Binding ClienteLogado.ClienteTelefone}" />
                        </StackPanel>
                    </ui:CardControl>
<TextBlock Text="Itens do Pedido" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" />

<ListView ItemsSource="{Binding ItensDoCarrinho}" 
          Background="Transparent" 
          BorderThickness="0"
          HorizontalAlignment="Stretch">
    <ListView.ItemContainerStyle>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
    </ListView.ItemContainerStyle>
    <ListView.ItemTemplate>
        <DataTemplate>
            <ui:CardControl Margin="0,5" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/> 
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding Produto.ImagemPath}" Width="70" Height="70" Stretch="Uniform" />

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock Text="{Binding Produto.Nome}" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding Produto.Descricao}" TextTrimming="CharacterEllipsis" Foreground="Gray" />
                    </StackPanel>

                    <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Quantidade, StringFormat='Qtd: {0}'}" />
                    
                    <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding Subtotal, StringFormat=C, ConverterCulture=pt-BR}" FontWeight="Bold" />
                </Grid>
            </ui:CardControl>
        </DataTemplate>
    </ListView.ItemTemplate>
</ListView>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Column="1" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" BorderThickness="1,0,0,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Resumo" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                    <ui:CardControl Padding="0,0,10,0" VerticalContentAlignment="Stretch">
                        <StackPanel Width="281">
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Subtotal dos produtos" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" Text="{Binding ValorTotal, StringFormat=C, ConverterCulture=pt-BR}" HorizontalAlignment="Right" />
                            </Grid>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Frete" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" Text="Grátis" Foreground="Green" FontWeight="SemiBold" HorizontalAlignment="Right" />
                            </Grid>

                            <Border BorderThickness="0,1,0,0" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" Margin="0,12" />

                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Valor Total" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding ValorTotal, StringFormat=C, ConverterCulture=pt-BR}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="16" />
                            </Grid>
                        </StackPanel>
                    </ui:CardControl>

                    <TextBlock Text="Forma de Pagamento" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10" />
                    <StackPanel>
                        <RadioButton GroupName="Pagamento" Content="Cartão de Crédito" IsChecked="True" Margin="0,5" />
                        <RadioButton GroupName="Pagamento" Content="Boleto Bancário" Margin="0,5" />
                        <RadioButton GroupName="Pagamento" Content="PIX" Margin="0,5" />
                    </StackPanel>

                    <ui:Button Content="Finalizar Compra" Appearance="Primary" Icon="Checkmark24" HorizontalAlignment="Stretch" Margin="0,30,0,0" Click="FinalizarCompra_Click" />
                </StackPanel>
            </Border>

            <ui:SnackbarPresenter Name="RootSnackbarPresenter" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Page>