<Page x:Class="ProjetoIntegradorVendas.EditarProduoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoIntegradorVendas"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="EditarProdutoPage"
      Background="#F0F0F0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:NavigationView x:Name="NavigationViewControl"
                           Grid.Row="0"
                           PaneDisplayMode="Top"
                           IsPaneVisible="True">
            <ui:NavigationView.Resources>
                <Style TargetType="ui:NavigationViewItem">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="ui:SymbolIcon">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                </Style>
            </ui:NavigationView.Resources>
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home" Click="NavigationView_OnItemInvoked">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="{x:Static ui:SymbolRegular.Home24}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem x:Name="Logout" Content="Logout" Click="NavigationView_OnItemInvoked">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="{x:Static ui:SymbolRegular.SignOut20}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <Grid Grid.Row="1">
            <Border x:Name="MainBorder"
            MaxWidth="650"
            Height="680"
            Margin="363,40,363,40"
            Background="White"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="8"
            Padding="30"
            UseLayoutRounding="True">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" Color="#E0E0E0" Opacity="0.4" BlurRadius="10"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <TextBlock Text="Edição do Produto"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,25"/>

                        <TextBlock Text="Nome do Produto" Foreground="Black" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txNomeProduto"
                         Text="{Binding Produto.Nome}"
                         Padding="5"
                         Margin="0,0,0,15"
                         FontSize="14"
                         Background="White" 
                         Foreground="Black" 
                         BorderBrush="Gray" 
                         BorderThickness="1"/>

                        <TextBlock Text="Preço" Foreground="Black" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txPrecoProduto"
                         Text="{Binding Produto.Preco}"
                         Padding="5"
                         Margin="0,0,0,15"
                         FontSize="14"
                         Background="White" 
                         Foreground="Black" 
                         BorderBrush="Gray" 
                         BorderThickness="1"/>

                        <TextBlock Text="Descrição" Foreground="Black" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txDescricaoProduto"
                         Text="{Binding Produto.Descricao}"
                         MinHeight="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Padding="5"
                         Margin="0,0,0,15"
                         FontSize="14"
                         Background="White" 
                         Foreground="Black" 
                         BorderBrush="Gray" 
                         BorderThickness="1"/>

                        <TextBlock Text="Estoque" Foreground="Black" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txEstoqueProduto"
                         Text="{Binding Produto.Estoque}"
                         Padding="5"
                         Margin="0,0,0,15"
                         FontSize="14"
                         Background="White" 
                         Foreground="Black" 
                         BorderBrush="Gray" 
                         BorderThickness="1"/>

                        <TextBlock Text="Imagem do Produto" Foreground="Black" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:Button Grid.Column="0"
                            Content="Selecionar Imagem"
                            Click="OpenFile_Click"
                            Padding="10,5"
                            Background="#E0E0E0" 
                            Foreground="Black"
                            BorderThickness="0"/>
                            <TextBlock x:Name="txbNomeArquivo"
                               Grid.Column="1"
                               TextWrapping="NoWrap"
                               TextTrimming="CharacterEllipsis"
                               Foreground="DarkGray"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                        </Grid>

                        <ui:Button Content="Salvar Alterações"
                        HorizontalAlignment="Stretch"
                        Height="40"
                        FontWeight="Bold"
                        Click="SalvarProduto_Click"
                        FontSize="16"
                        BorderThickness="0"
                        Appearance="Primary"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <ui:SnackbarPresenter Grid.Row="1" x:Name="RootSnackbarPresenter"
                              Width="300"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Bottom"
                              Margin="0,0,0,30"
                              Panel.ZIndex="999"/>
    </Grid>
</Page>